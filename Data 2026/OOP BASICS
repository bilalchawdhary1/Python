# MINI PROJECT â€” BANK ACCOUNT SYSTEM


class BankAccount:

  def __init__(self, owner_name, balance):
    self.owner_name = owner_name
    self.balance = balance

  # methode
  def deposit(self, amount):
    self.balance += amount
    print(f'Deposited {amount} into the account. New balance: {self.balance}')
    # methode
  def withdraw(self, amount):
    if amount > self.balance:
      print("Insufficient funds!")
    else:
      self.balance -= amount
      print(f'Withdrew {amount} from the account. New balance: {self.balance}')
      # methode
  def get_balance(self):
    print(f'Current balance: {self.balance}')


account = BankAccount("John Doe", 1000)
account.deposit(500)
account.withdraw(200)
account.get_balance()


# SMALL LOGIC TASK

class Product:
   def __init__(self, name, price):
      self.name = name
      self.price = price

# apply_discount
   def apply_discount(self, discount_percentage):
      self.price -= self.price * discount_percentage / 100
      print(f'Discount applied. New price: {self.price}')
      # display_info
     
