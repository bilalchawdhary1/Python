#1 function that add two numbers
def add(a, b):
  return a + b


print(add(2, 5))

#2 function that check the even  number
# num = int(input("Enter a number: "))


def is_even(num):
  if num % 2 == 0:
    print("Even")
  else:
    print("Odd")


is_even(3)


#3 Function that returns square of a number
def square(num):
  return num * num


print(square(3))


#4 Function that takes name & age â†’ prints sentence
def print_sentence(name, age):
  print(f"{name} is {age} years old")


print_sentence("John", 25)


# LIST + FUNCTIONS COMBO
def get_average(marks_list):
  total = sum(marks_list)
  average = total / len(marks_list)
  return average


print(f"Average is {get_average([10, 20, 30, 40, 50])}")


# get hightest marks
def get_highest(marks_list):
  highest = max(marks_list)
  return highest


print(f"Highest marks is {get_highest([10, 20, 30, 40, 50])}")


# get get_lowest marks
def get_lowest(marks_list):
  lowest = min(marks_list)
  return lowest


print(f"lowest marks is {get_lowest([10, 20, 30, 40, 50])}")

